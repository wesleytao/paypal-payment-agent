# PayPal API Credentials (SANDBOX MODE ONLY)
# Replace with your own sandbox credentials from https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_ID=<your_sandbox_client_id>
PAYPAL_CLIENT_SECRET=<your_sandbox_client_secret>
PAYPAL_MODE=sandbox  # IMPORTANT: This project is designed for sandbox mode only

# OpenAI API Settings
OPENAI_API_KEY=<your_openai_api_key>
OPENAI_MODEL=gpt-4o-mini  # Default model, can be changed to other OpenAI models

# Logging Configuration
LOG_LEVEL=DEBUG  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Flask Application Settings
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_PORT=5008  # Default port for the web application
